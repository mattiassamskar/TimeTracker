<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:timeTracker="clr-namespace:TimeTracker">

  <ContextMenu x:Key="SysTrayMenu">
    <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
  </ContextMenu>

  <tb:TaskbarIcon x:Key="NotifyIcon" ContextMenu="{StaticResource SysTrayMenu}" IconSource="pack://application:,,,/Resources/TimeTracker.ico" ToolTip="TimeTracker">
    <tb:TaskbarIcon.DataContext>
      <timeTracker:NotifyIconViewModel />
    </tb:TaskbarIcon.DataContext>
  </tb:TaskbarIcon>

</ResourceDictionary>